{
  "manifest_version": 2,
  "name": "takeShot",
  "description": "This extension takes screen shot of current tab",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon2.png",
    "default_title": "Capture screenshot",
    "default_popup" : "popup.html"
  },
  "background": {
  "scripts": ["background.js"],
   "persistent": true
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "downloads"
  ]
}
